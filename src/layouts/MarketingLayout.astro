---
/**
 * MarketingLayout
 * Layout wrapper for marketing pages with floating capsule header
 * Uses Header shape="floating" for a distinctive visual identity
 */
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  noindex?: boolean;
  nofollow?: boolean;
  includeOrgSchema?: boolean;
}

const {
  title,
  description,
  image,
  imageAlt,
  noindex = false,
  nofollow = false,
  includeOrgSchema = false,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  imageAlt={imageAlt}
  noindex={noindex}
  nofollow={nofollow}
  includeOrgSchema={includeOrgSchema}
>
  <Header
    slot="header"
    shape="floating"
    variant="transparent"
    position="fixed"
    colorScheme="invert"
    showCta={true}
    cta={{ label: 'Get Started', href: '#get-started' }}
    actions={[
      {
        icon: 'github',
        href: 'https://github.com/southwellmedia/velocity',
        label: 'GitHub',
        iconOnly: true,
        target: '_blank',
      },
    ]}
    showLanguageSwitcher={false}
  />

  <slot />

  <Footer slot="footer" layout="simple" background="secondary" showCopyright={false} />
</BaseLayout>
