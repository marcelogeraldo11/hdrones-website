---
/**
 * PageLayout
 * Layout wrapper for standard content pages (non-landing)
 * Uses Header + Footer for consistent navigation
 * Used when demo content is not included
 */
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

import type { Locale } from '@/i18n/config';
import type { RouteId } from '@/i18n/routes';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  noindex?: boolean;
  nofollow?: boolean;
  lang?: Locale;
  routeId?: RouteId;
}

const { title, description, image, imageAlt, noindex, nofollow, lang, routeId } = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  image={image}
  imageAlt={imageAlt}
  noindex={noindex}
  nofollow={nofollow}
  lang={lang}
  routeId={routeId}
>
  <Header slot="header" />

  <main class="min-h-screen pt-16">
    <slot />
  </main>

  <Footer 
    slot="footer" 
    locale={lang} 
    layout="columns" 
    columns={3} 
    background="invert"
    class="bg-[#00557d] text-white border-t-0"
  />
</BaseLayout>
