---
import PageLayout from '@/layouts/PageLayout.astro';
import Button from '@/components/ui/form/Button/Button.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Card from '@/components/ui/data-display/Card/Card.astro';
import { getLocalizedPath, type Locale } from '@/i18n/index';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params as { lang: Locale };

const courses = [
  {
    title: "NIGHT PACK: COURSE TO OBTAIN DGAC CREDENTIAL + LEARN TO FLY DRONES + NIGHT FLIGHT CERTIFICATION (VNOC)",
    date: "March 6, 2026",
    slots: "3 Spots Available",
    image: "/images/drone-training.png",
    tag: "06 Mar"
  },
  {
    title: "COURSE TO OBTAIN DGAC CREDENTIAL + LEARN TO FLY DRONES",
    date: "March 5, 2026",
    slots: "3 Spots Available",
    image: "/images/drone-training.png",
    tag: "05 Mar",
    offer: true
  },
  {
    title: "SUPER PACK! COURSE TO OBTAIN DGAC CREDENTIAL + LEARN TO FLY DRONES + NIGHT FLIGHT CERTIFICATION (VNOC) + PHOTOGRAMMETRY",
    date: "March 6, 2026",
    slots: "Spots Available",
    image: "/images/drone-training.png",
    tag: "06 Mar"
  },
  {
    title: "COURSE TO OBTAIN DGAC CREDENTIAL + LEARN TO FLY DRONES",
    date: "March 6, 2026",
    slots: "2 Spots Available",
    image: "/images/drone-training.png",
    tag: "06 Mar"
  },
  {
    title: "LEARN TO FLY DRONES COURSE",
    date: "March 5, 2026",
    slots: "3 Spots Available",
    image: "/images/drone-training.png",
    tag: "05 Mar",
    offer: true
  },
  {
    title: "DRONE PHOTOGRAMMETRY COURSE",
    date: "March 6, 2026",
    slots: "2 Spots Available",
    image: "/images/drone-training.png",
    tag: "06 Mar"
  },
  {
    title: "DRONE PHOTOGRAMMETRY COURSE IN TEMUCO",
    date: "March 14, 2026",
    slots: "3 Spots Available",
    image: "/images/drone-training.png",
    tag: "14 Mar"
  },
  {
    title: "DRONE NIGHT FLIGHT RATING COURSE",
    date: "March 6, 2026",
    slots: "2 Spots Available",
    image: "/images/drone-training.png",
    tag: "06 Mar"
  }
];
---

<PageLayout 
  title="Certified Drone Courses DGAC | HDRONESÂ®" 
  description="Explore our range of professional drone courses. Obtain your DGAC credential, learn to fly and specialize with the best instructors."
  lang={lang}
  routeId="courses"
>
  <!-- Hero Section -->
  <section class="bg-background-secondary py-16 md:py-24 border-b border-border">
    <div class="container text-center">
      <h1 class="font-display text-4xl md:text-5xl font-extrabold mb-6">Our <span class="text-brand-600">Courses</span></h1>
      <p class="text-xl text-foreground-muted max-w-2xl mx-auto leading-relaxed">
        Professional training with official certification. Choose the course that best fits your needs and start your career in the world of drones.
      </p>
    </div>
  </section>

  <!-- Courses Grid -->
  <section class="py-20 bg-background">
    <div class="container">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {courses.map((course) => (
          <Card variant="outline" class="flex flex-col h-full overflow-hidden hover:shadow-xl transition-all duration-300 border-border/50 group">
            <div class="relative aspect-square overflow-hidden">
              <img 
                src={course.image} 
                alt={course.title} 
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute top-0 left-0 bg-brand-600 text-white px-4 py-2 font-display font-bold text-center leading-tight">
                <span class="block text-xl">{course.tag.split(' ')[0]}</span>
                <span class="block text-xs uppercase">{course.tag.split(' ')[1]}</span>
              </div>
              {course.offer && (
                <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm text-brand-600 px-3 py-1 rounded-full text-xs font-bold shadow-sm border border-brand-200">
                  Offer!
                </div>
              )}
            </div>
            
            <div class="p-6 flex flex-col flex-1">
              <h3 class="font-display text-base font-bold mb-4 line-clamp-3 leading-tight text-foreground group-hover:text-brand-600 transition-colors uppercase">
                {course.title}
              </h3>
              
              <div class="mt-auto space-y-3">
                <div class="flex items-center gap-2 text-xs text-foreground-muted">
                  <Icon name="calendar" size="xs" class="text-brand-500" />
                  <span>{course.date}</span>
                </div>
                <div class="flex items-center gap-2 text-xs text-foreground-muted">
                  <Icon name="users" size="xs" class="text-brand-500" />
                  <span>{course.slots}</span>
                </div>
                
                {/* Mockup transition stars */}
                <div class="flex gap-0.5 text-yellow-400 mt-2">
                  {[...Array(5)].map(() => (
                    <Icon name="star" size="xs" />
                  ))}
                </div>

                <div class="pt-4 mt-2 border-t border-border/50">
                  <Button variant="primary" size="md" fullWidth class="rounded-lg shadow-sm">
                    View Details
                  </Button>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Info Banner -->
  <section class="py-16 bg-brand-600 text-white overflow-hidden relative">
    <div class="absolute inset-0 bg-grid-pattern opacity-10 pointer-events-none"></div>
    <div class="container relative z-10 text-center">
      <h2 class="text-3xl font-bold mb-6">Need personalized advice?</h2>
      <p class="text-lg opacity-90 mb-8 max-w-2xl mx-auto">
        If you are not sure which course to choose or need custom training for your company, our team is ready to help.
      </p>
      <div class="flex justify-center gap-4">
        <Button variant="outline" size="lg" href={getLocalizedPath('contact', lang as Locale)} class="bg-white text-brand-600 border-none hover:bg-brand-50">
          Contact us now
        </Button>
      </div>
    </div>
  </section>
</PageLayout>
