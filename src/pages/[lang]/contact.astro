---
import PageLayout from '@/layouts/PageLayout.astro';
import { useTranslations, type Locale } from '@/i18n';
import Button from '@/components/ui/form/Button/Button.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import Input from '@/components/ui/form/Input/Input.astro';
import Textarea from '@/components/ui/form/Textarea/Textarea.astro';
import Select from '@/components/ui/form/Select/Select.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const t = useTranslations(lang as 'en');
---

<PageLayout
  title={t('contact.meta.title')}
  description={t('contact.meta.description')}
  lang={lang as Locale}
  routeId="contact"
>
  <div class="py-16 md:py-24">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-12 gap-16">
        
        {/* Left Column: Form */}
        <div class="lg:col-span-7">
          <h2 class="font-display text-4xl font-bold text-foreground mb-8">
            {t('contact.form.title')}
          </h2>

          <form class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <Input
                label={t('contact.form.name')}
                id="name"
                name="name"
                required
              />
              <Input
                label={t('contact.form.email')}
                type="email"
                id="email"
                name="email"
                required
              />
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <Input
                label={t('contact.form.phone')}
                type="tel"
                id="phone"
                name="phone"
                required
              />
              <Input
                label={t('contact.form.region')}
                id="region"
                name="region"
                required
              />
            </div>

            <Select
              label={t('contact.form.course')}
              id="course"
              name="course"
            >
              <option value="">{t('contact.form.course')}</option>
              {/* Keep these in Spanish or translate as needed, user's input was Spanish */}
              <option value="credencial">DGAC Credential Course</option>
              <option value="aprender">Learn to Fly Course</option>
              <option value="ala-fija">Fixed Wing Flight Course</option>
              <option value="fotogrametria">Photogrammetry Course</option>
            </Select>

            <Textarea
              label={t('contact.form.message')}
              id="message"
              name="message"
              rows={4}
              required
            ></Textarea>

            {/* ReCaptcha Mockup */}
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 flex items-center justify-between max-w-sm">
              <div class="flex items-center gap-3">
                <div class="w-6 h-6 border-2 border-gray-300 rounded bg-white"></div>
                <span class="text-sm font-medium text-gray-700">{t('contact.form.captcha')}</span>
              </div>
              <div class="flex flex-col items-center">
                <img src="https://www.gstatic.com/recaptcha/api2/logo_48.png" alt="reCAPTCHA" class="w-8 h-8 opacity-70" />
                <span class="text-[10px] text-gray-400">reCAPTCHA</span>
                <span class="text-[8px] text-gray-400">Privacy - Terms</span>
              </div>
            </div>

            <Button variant="primary" size="xl" type="submit" class="w-full md:w-auto px-12">
              {t('contact.form.submit')}
            </Button>
          </form>
        </div>

        {/* Right Column: Info & Sidebar */}
        <div class="lg:col-span-5 space-y-10">
          <div class="space-y-6">
            <h3 class="font-display text-2xl font-bold text-foreground leading-tight">
              {t('contact.sidebar.title')}
            </h3>
            <p class="text-lg font-medium text-brand-600">
              {t('contact.sidebar.subtitle')}
            </p>
            <p class="text-foreground-muted leading-relaxed italic">
              {t('contact.sidebar.description')}
            </p>
          </div>

          <div class="space-y-3">
            {t('contact.sidebar.highlights').map((highlight: string) => (
              <div class="bg-brand-500 text-white py-3 px-6 rounded-lg font-medium shadow-sm transition-transform hover:scale-[1.02]">
                {highlight}
              </div>
            ))}
          </div>

          <div class="rounded-2xl overflow-hidden shadow-2xl border border-border">
            <img 
              src="/images/drone-training.png" 
              alt="Drone Training" 
              class="w-full h-auto object-cover aspect-[4/3]"
            />
          </div>
        </div>
      </div>

      {/* Bottom Info Grid */}
      <div class="mt-24 grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="flex gap-4 p-6 bg-background border border-border rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 rounded-full bg-brand-100 flex items-center justify-center text-brand-600 shrink-0">
            <Icon name="map-pin" size="md" />
          </div>
          <div>
            <h4 class="font-bold mb-1">{t('contact.info.center.label')}</h4>
            <p class="text-sm text-foreground-muted leading-snug">{t('contact.info.center.value')}</p>
          </div>
        </div>

        <div class="flex gap-4 p-6 bg-background border border-border rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 rounded-full bg-brand-100 flex items-center justify-center text-brand-600 shrink-0">
            <Icon name="phone" size="md" />
          </div>
          <div>
            <h4 class="font-bold mb-1">{t('contact.info.phone.label')}</h4>
            <p class="text-sm text-foreground-muted leading-snug">{t('contact.info.phone.value')}</p>
          </div>
        </div>

        <div class="flex gap-4 p-6 bg-background border border-border rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 rounded-full bg-brand-100 flex items-center justify-center text-brand-600 shrink-0">
            <Icon name="mail" size="md" />
          </div>
          <div>
            <h4 class="font-bold mb-1">{t('contact.info.email.label')}</h4>
            <p class="text-sm text-foreground-muted leading-snug">{t('contact.info.email.value')}</p>
          </div>
        </div>

        <div class="flex gap-4 p-6 bg-background border border-border rounded-xl hover:shadow-lg transition-shadow">
          <div class="w-12 h-12 rounded-full bg-brand-100 flex items-center justify-center text-brand-600 shrink-0">
            <Icon name="clock" size="md" />
          </div>
          <div>
            <h4 class="font-bold mb-1">{t('contact.info.hours.label')}</h4>
            <p class="text-sm text-foreground-muted leading-snug">{t('contact.info.hours.value')}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageLayout>
