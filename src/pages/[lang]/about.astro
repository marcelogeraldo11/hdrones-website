---
import PageLayout from '@/layouts/PageLayout.astro';
import Button from '@/components/ui/form/Button/Button.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';
import StatCard from '@/components/patterns/StatCard.astro';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } }
  ];
}

const { lang } = Astro.params;
const locale = lang as 'en';
---

<PageLayout
  title="About Us | HDRONES® Drone Academy Chile"
  description="Learn about HDRONES®, leaders in drone pilot training in Chile with over 9 years of experience."
  lang={locale}
  routeId="about"
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-background-secondary border-b border-border py-20 md:py-32">
    <div class="absolute inset-0 bg-grid-pattern opacity-10 pointer-events-none"></div>
    <div class="relative container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl font-bold tracking-tight text-foreground md:text-6xl mb-6">
          HDRONES® <span class="text-brand-600">Drone Academy Chile</span>
        </h1>
        <p class="text-xl text-foreground-muted leading-relaxed mb-8">
          We are a team of multidisciplinary instructors who are leaders in the field of training and coaching of RPAS (Drones) nationwide with more than 9 years of experience.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button variant="primary" size="xl" href="#courses">
            See Courses
            <Icon name="arrow-right" size="sm" />
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Values -->
  <section class="py-24 bg-background">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-6">Training with the highest standards</h2>
          <p class="text-lg text-foreground-muted mb-6">
            We satisfy our customers' needs with the highest technological standards. We also provide aeronautical consulting in drones with innovative solutions according to Chilean regulations, contributing to the success of your projects.
          </p>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <div class="mt-1 w-6 h-6 rounded-full bg-brand-100 flex items-center justify-center text-brand-600">
                <Icon name="check" size="xs" />
              </div>
              <p class="font-medium">Official DGAC Certification</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="mt-1 w-6 h-6 rounded-full bg-brand-100 flex items-center justify-center text-brand-600">
                <Icon name="check" size="xs" />
              </div>
              <p class="font-medium">Professional equipment at no additional cost</p>
            </div>
            <div class="flex items-start gap-3">
              <div class="mt-1 w-6 h-6 rounded-full bg-brand-100 flex items-center justify-center text-brand-600">
                <Icon name="check" size="xs" />
              </div>
              <p class="font-medium">Suitable training environment</p>
            </div>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-video rounded-2xl bg-muted overflow-hidden shadow-2xl">
             <div class="absolute inset-0 flex items-center justify-center bg-brand-600/10">
                <Icon name="play" size="xl" class="text-brand-600" />
             </div>
          </div>
          <div class="absolute -bottom-6 -left-6 bg-brand-600 text-white p-6 rounded-xl shadow-xl hidden md:block">
            <p class="text-3xl font-bold">10,000+</p>
            <p class="text-sm opacity-90">Trained operators</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Grid -->
  <section class="py-24 bg-background-secondary border-y border-border">
    <div class="container mx-auto px-6">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <h2 class="text-3xl font-bold mb-4">WE LEAVE THE CONVENTIONAL BEHIND!</h2>
        <p class="text-foreground-muted">Our innovative model has been mentioned in national media.</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <StatCard 
          label="Experience" 
          value="9+ Years"
          description="Expert faculty with years of experience in pilot training."
        />
        <StatCard 
          label="Methodology" 
          value="Own"
          description="Guarantees maximum quality to our aspiring RPAS pilots."
        />
        <StatCard 
          label="Quality" 
          value="Premium"
          description="We have the latest technology and necessary tools."
        />
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-24 bg-brand-600 text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Are you ready to be a Certified Drone Operator?</h2>
      <p class="text-xl opacity-90 mb-10 max-w-2xl mx-auto">
        Join our courses and specialize in drone use with us!
      </p>
      <Button variant="outline" size="xl" class="bg-white text-brand-600 hover:bg-brand-50 border-none" href="#">
        See Courses
      </Button>
    </div>
  </section>

</PageLayout>
